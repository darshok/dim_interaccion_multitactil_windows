<Page
    x:Class="DimMultitactilWindows.Ejercicio3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DimMultitactilWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image x:Name="imageView" Source="/Assets/tri-force-png-legend-of-zelda-triforce.png" Width="400" Height="300" ManipulationMode="Scale,Rotate" ManipulationDelta="imageView_ManipulationDelta" ImageOpened="Image_Opened">
            <Image.RenderTransform>
                <TransformGroup>
                    <RotateTransform x:Name="RotateTransform" />
                    <ScaleTransform x:Name="ScaleTransform"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Page>
